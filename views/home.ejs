<!DOCTYPE html> 
<html> 
    <%- include('./head') %>  
<body> 
    <div class="section">
        <div class="container">
            <h1>Solana Transfer Application</h1>
            <p>Transfer SOL to a public wallet on Solana blockchain</p>
            <!-- <%= data ? JSON.stringify(data) : ''%> -->
            <form id="airdropForm">
                <div class="form-control">
                    <input type="text" name="publickey" placeholder="Enter recipient address" required>
                </div>
                <div class="form-control">
                    <input type="number" min="0" step="0.01" max="1"  name="lamport" placeholder="Enter SOL required" required>
                </div>
                <div style="width: 100%;" class="form-control">
                    <div class="toggle-container">
                        <span> Testnet &nbsp;</span>
                        <label class="toggle">
                            <input type="checkbox" name="environment" value="devnet" checked>
                            <span class="slider"></span>
                        </label>  
                        <span>&nbsp; Devnet </span>
                    </div>
                </div>
                <div style="width: 100%;" class="form-control">
                    <button type="submit">Request Airdrop
                        <img style="height: 24px;position: absolute; margin: -2px 5px;" src="https://img.icons8.com/external-flatart-icons-flat-flatarticons/64/external-airdrop-user-interface-flatart-icons-flat-flatarticons.png" alt="external-airdrop-user-interface-flatart-icons-flat-flatarticons"/>
                    </button>
                </div>
            </form>
        </div>
    </div>
