<!DOCTYPE html>
<html>
<%- include('./head') %>

    <body>
        <div class="section">
            <div class="container">
                <h1>SOL FAUCET</h1>
                <p>Transfer SOL to Testnet and Devnet of Solana blockchain</p>
                <!-- <%= data ? JSON.stringify(data) : ''%> -->
                <form id="airdropForm">
                    <div style="width: 100%;" class="form-control">
                        <div class="toggle-container">
                            <span> Testnet &nbsp;</span>
                            <label class="toggle">
                                <input type="checkbox" name="environment" value="devnet" checked>
                                <span class="slider"></span>
                            </label>
                            <span>&nbsp; Devnet </span>
                        </div>
                    </div>
                    <div class="form-control">
                        <label for="address">Enter recipient address</label>
                        <input id="address" type="text" name="publickey" required>
                    </div>
                    <div class="form-control">
                        <label for="amount">Enter SOL required</label>
                        <input id="amount" type="number" min="0" step="0.01" max="1" name="lamport" placeholder=""
                            required>
                    </div>

                    <div style="width: 100%;" class="form-control">
                        <button type="submit">Request Airdrop
                            <img style="height: 24px;position: absolute; margin: -2px 5px;"
                                src="https://img.icons8.com/external-flatart-icons-flat-flatarticons/64/external-airdrop-user-interface-flatart-icons-flat-flatarticons.png"
                                alt="external-airdrop-user-interface-flatart-icons-flat-flatarticons" />
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- loader animation -->
        <div id="loader-wrapper">
            <div class="loader"></div>
        </div>

        <!-- popup message -->
        <div class="popup-container" id="popup">
            <div class="popup">
                <h2 id="popupHeading">Transfer Status!</h2>
                <p id="popupMessage">Your transfer has been completed successfully.</p>
                <button onclick="closePopup()">Close</button>
            </div>
        </div>


        <div class="footer"><%- include('./foot') %></div>
    </body>

</html>